{
  "expo": {
    "name": "HealthSync AI",
    "slug": "healthsync-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.healthsync.ai",
      "infoPlist": {
        "NSCameraUsageDescription": "HealthSync AI needs camera access for AR medical scanning and future simulation photos.",
        "NSMicrophoneUsageDescription": "HealthSync AI needs microphone access for voice AI doctor consultations.",
        "NSLocationWhenInUseUsageDescription": "HealthSync AI uses location to find nearby doctors and healthcare services.",
        "NSPhotoLibraryUsageDescription": "HealthSync AI needs photo library access to save and manage medical images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.healthsync.ai",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-camera",
      "expo-av",
      "expo-location",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "healthsync-ai-project"
      }
    }
  }
}