# =========================================================
# HealthSync AI - Environment Configuration
# =========================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
API_VERSION=v1

# =============================================================================
# SECURITY (CHANGE THESE IN PRODUCTION!)
# =============================================================================
SECRET_KEY=your-super-secret-key-min-32-chars-change-this-in-production-12345678
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS ORIGINS (Comma-separated)
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# =============================================================================
# DATABASE - MongoDB Atlas (Primary Database)
# =============================================================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=healthsync

# For MongoDB Atlas (Recommended):
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AI / ML SERVICES
# =============================================================================
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-70b-versatile

REPLICATE_API_TOKEN=your-replicate-token-here
HUGGINGFACE_API_KEY=your-huggingface-key-here
OPENAI_API_KEY=your-openai-key-here-optional

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
RESEND_API_KEY=your-resend-api-key-here
FROM_EMAIL=noreply@healthsync.ai

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_AUDIO_TYPES=audio/wav,audio/mp3,audio/webm

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_VOICE=10
RATE_LIMIT_IMAGE=5
RATE_LIMIT_ML=20
RATE_LIMIT_GENERAL=100

# =============================================================================
# CACHING (seconds)
# =============================================================================
CACHE_TTL_PREDICTIONS=3600
CACHE_TTL_DOCTORS=1800
CACHE_TTL_HEALTH_DATA=900

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/healthsync.log
LOG_ROTATION=daily
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
SENTRY_DSN=

# =============================================================================
# AI MODEL CONFIG
# =============================================================================
VOICE_SAMPLE_RATE=16000
VOICE_CHUNK_DURATION=1.0
VOICE_MAX_DURATION=300

IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=85

ML_MODEL_CACHE_SIZE=10
ML_PREDICTION_BATCH_SIZE=32

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_VOICE_ANALYSIS=true
ENABLE_AR_SCANNER=true
ENABLE_THERAPY_GAME=true
ENABLE_FUTURE_SIMULATOR=true
ENABLE_DOCTOR_MARKETPLACE=true

ENABLE_GROQ_FALLBACK=true
ENABLE_LOCAL_WHISPER=false
ENABLE_OFFLINE_MODE=false
